<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="project_task_start_stop_form_view" model="ir.ui.view">
			<field name="name">project.task.start.stop.form</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_form2"/>
			<field name="arch" type="xml">
				<field name="company_id" position="after">
					<field name="current_user" invisible="1"/>
					<field name="started_user" invisible="1"/>
					<field name="chrono_date_start" invisible="1"/>
					<field name="chrono_date_end" invisible="1"/>
					<field name="start_stop" invisible="1"/>
				</field>
				<xpath expr="//header" position="inside">
					<button name="action_start" string="Start" type="object" icon="fa-play" 
						attrs="{'invisible': [('start_stop', '=', True)]}"
						class="btn btn-primary"/>/>
					<button name="action_stop" string="Stop" type="object" icon="fa-stop" 
						attrs="{'invisible': [('start_stop', '=', False)]}"
						class="btn btn-danger"/>/>
				</xpath>
				<field name="tag_ids" position="after">
					<field name="running_work_description" attrs="{'invisible': [('start_stop', '=', False)]}" placeholder="Work Description"/>
				</field>

				<field name="timesheet_ids" position="before">
					<label for="start_stop_users_ids" string="Users currently working on this task" attrs="{'invisible': [('start_stop', '=', False)]}"/> 
					<field name="start_stop_users_ids" context="{'id' : uid}" attrs="{'invisible': [('start_stop', '=', False)]}">
						<tree string="Users currently working" create="0" edit="0" delete="0" editable="0" >
							<button name="counter_refresh" class="oe_highlight" string="Refresh timer" type="object" icon="fa-refresh"/>
							<field name="name" />
							<field name="count_time" />
							<field name="chrono_date_start" invisible="0" groups="hr.group_hr_manager"/>
							<field name="chrono_date_end" invisible="1" groups="hr.group_hr_manager"/>
							<field name="start_stop" invisible="1"/>
						</tree>
					</field>
				</field>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_task_form2_inherited">
			<field name="name">project.task.form.inherited</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
			<field name="arch" type="xml">
				<field name="timesheet_ids" position="replace">
					<field name="timesheet_ids" context="{'default_project_id': project_id}">
						<tree editable="bottom" string="Timesheet Activities" default_order="date">
							<field name="date"/>
							<field name="user_id" required="1"/>
							<field name="name"/>
							<field name="chrono_date_start" groups="hr.group_hr_manager"/>
							<field name="chrono_date_stop" groups="hr.group_hr_manager"/>
							<field name="unit_amount" string="Duration" widget="float_time" groups="hr.group_hr_manager"/>
							<field name="project_id" invisible="1"/>
						</tree>
					</field>
				</field>
			</field>
		</record>

		<record id="view_task_kanban_inh" model="ir.ui.view">
			<field name="name">project.task.kanban</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_kanban"/>
			<field name="arch" type="xml">
				<field name="color" position="after">
					<field name="start_stop"/>
				</field>
				<xpath expr="//div[contains(@class, 'oe_kanban_bottom_left')]" position="inside">
					<div class="pull-right" groups="base.group_user" style="margin-left: 10px;">
						<t attrs="{'invisible': [('start_stop', '=', True)]}">
							<a type="object" string="Start" name="action_start" class="btn btn-primary">
								<span class="fa fa-play"/>
							</a>
						</t>
						<t attrs="{'invisible': [('start_stop', '=', False)]}">
							<a type="object" string="Stop" name="action_stop" class="btn btn-danger">
								<span class="fa fa-stop"/>
							</a>
						</t>
					</div> 
				</xpath>
			</field>
		</record>

		<record id="view_task_search_form" model="ir.ui.view">
			<field name="name">project.task.search.form</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_search_form"/>
			<field name="arch" type="xml">
				<field name="stage_id" position="after">
					<field name="start_stop_users_ids" />
				</field>
				<filter name="inactive" position="after">
					<separator/>
					<filter string="Started Tasks" name="started" domain="[('start_stop_users_ids','!=',False)]"/>
				</filter>
			</field>
		</record>

	</data>
</openerp>
